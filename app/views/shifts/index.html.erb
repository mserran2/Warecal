<h1>Listing shifts</h1>

<table>
  <tr>
    <th>Template</th>
    <th>Date</th>
    <th>Start</th>
    <th>End</th>
    <th>Canceled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.template_id %></td>
    <td><%= shift.date %></td>
    <td><%= shift.start %></td>
    <td><%= shift.end %></td>
    <td><%= shift.canceled %></td>
    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

